@model lab_sherstnov_db.Models.Class

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaximumParticipants)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaximumParticipants)
        </dd>
    </dl>
</div>

@if (Model.Trainer != null)
{
    <div>
        <h4>Trainer of the Class</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Trainer.Name)
            </dd>
            <dt class="col-sm-2">
                Specialization
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Trainer.Specialization)
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Trainer.Email)
            </dd>
            <dt class="col-sm-2">
                Phone
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Trainer.Phone)
            </dd>
        </dl>
    </div>
}

@if (Model.ClassRegistrations != null && Model.ClassRegistrations.Any())
{
    <div>
        <h4>Class Registrations</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassRegistrations.First().Member.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassRegistrations.First().RegistrationDate)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var registration in Model.ClassRegistrations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => registration.Member.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => registration.RegistrationDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
